{
   "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5200"
      },
      "Https": {
        "Url": "https://localhost:7200"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "IdentityService",
    "Audience": "IdentityServiceClients",
    "SigningKey": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET_AT_LEAST_32_CHARS",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 14
  }
}
